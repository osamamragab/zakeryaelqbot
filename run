#!/bin/sh

if command -v pipenv >/dev/null 2>&1; then
  pipenv run python3 bot.py "$@"
  exit $?
elif ! command -v python3 >/dev/null 2>&1; then
  echo "python3 is not installed" >&2
  exit 1
fi

if [ -r .env ]; then
  # shellcheck disable=SC2046
  env $(grep -v '^#' .env | xargs) python3 bot.py "$@"
  exit $?
fi

python3 bot.py "$@"
